{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json",
        "extensions:": [".tsx", ".ts"]
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["src/**/*.css", "src/**/*.svg"],
    "overrides": [
        {
            "files": ["src/**/*.{ts,tsx}"]
        }
    ],
    "rules": {
        "@typescript-eslint/restrict-plus-operands": ["error", { "checkCompoundAssignments": true }]
    }
}
